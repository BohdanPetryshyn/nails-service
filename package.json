{
  "name": "nails-service",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "deploy": "cd deploy && cdk deploy",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"deploy/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NO_COLOR=true node dist/main",
    "start:docker": "docker build -t nails-test . && docker run --rm -p 3000:3000 nails-test",
    "lint": "eslint \"{src,apps,libs,test,deploy}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/core": "^7.6.13",
    "@nestjs/platform-express": "^7.6.13",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.93.0",
    "@aws-cdk/aws-codepipeline": "^1.93.0",
    "@aws-cdk/aws-codepipeline-actions": "^1.93.0",
    "@aws-cdk/aws-ec2": "^1.93.0",
    "@aws-cdk/aws-ecr": "^1.93.0",
    "@aws-cdk/aws-ecs": "^1.93.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.93.0",
    "@aws-cdk/core": "^1.93.0",
    "@aws-cdk/pipelines": "^1.93.0",
    "@bpetryshyn/nails-platform-client": "^0.1.3",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "aws-cdk": "^1.93.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0",
    "source-map-support": "^0.5.16",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  }
}
